@model IEnumerable<testMVC.Models.Customer>
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">



<link href="~/lib/DataTables/media/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />

}

<!-- CSS dependencies -->

<!-- JS dependencies -->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/DataTables/media/js/jquery.dataTables.js"></script>
<script src="~/lib/bootbox.js/bootbox.min.js"></script>



<h2>Customers</h2>

<table id ="customers" class="table table-­‐bordered table-­‐hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Room number</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>



@section scripts
{
    
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>
    <script>
        
        $(document).ready(function () {

            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customer/edit/" + customer.id + "'>" + customer.name + "</a>";

                        }

                    },
                    {
                        data: "room.number"//"name"

                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>"

                        }
                    }
                ]
            });

            $("#customers").on("click", ".js-delete", function () {
                console.log("2");
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();

                            }
                        });
                    }
                });
            });
        });
        
    </script>
    
}